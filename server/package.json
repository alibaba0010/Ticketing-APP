{
  "name": "ticketing-api",
  "version": "1.0.0",
  "description": "ticketing-service",
  "main": "index.js",
  "scripts": {
    "dev:auth": "ts-node-dev  auth/src/server.ts",
    "dev:tickets": "ts-node-dev tickets/src/server.ts",
    "dev:orders": "ts-node-dev orders/src/server.ts",
    "dev:expiration": "ts-node-dev expiration/src/server.ts",
    "dev:payments": "ts-node-dev payments/src/server.ts",
    "clean": "del ./build/*",
    "build": "npm run clean && tsc",
    "pub": "git add . && git commit -m \"Updates\" && npm version patch && npm run build && npm publish",
    "test": "jest --watchAll --no-cache --detectOpenHandles",
    "test:ci": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 10000,
    "setupFilesAfterEnv": [
      "./auth/src/test/index.ts",
      "./tickets/src/test/index.ts",
      "./orders/src/test/index.ts",
      "./payments/src/test/index.ts"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/common/src/$1"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@alibabatickets/common": "^1.0.8",
    "@types/bull": "^4.10.0",
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "bull": "^4.11.3",
    "cookie-session": "^2.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "mongoose": "^7.3.4",
    "mongoose-update-if-current": "^1.4.0",
    "node-nats-streaming": "^0.3.2",
    "stripe": "^13.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^8.15.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  },
  "config": {
    "mongodbMemoryServer": {
      "debug": "1"
    },
    "_moduleAliases": {
      "@app/common": "./common/src/"
    }
  }
}
